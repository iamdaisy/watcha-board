<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1 align="center">Listing Movies</h1>



<div align="center"><%= link_to 'New Movie', new_movie_path %></div>
<div class="container">
  <div class="row">
    <% @movies.each do |movie| %>
    <div class="col-sm-4 col-lg-3 col-xs-6">
      <div class="card">
        <img class="card-img-top" src="<%= movie.img_url %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"></p>
          <%= link_to "상세보기", movie, class: "btn btn-primary" %><br>
          <% if current_user.admin? %>
          <div class="btn btn-default"><%= link_to 'Edit', edit_movie_path(movie) %></div>
          <div class="btn btn-default"><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= paginate @movies %>
